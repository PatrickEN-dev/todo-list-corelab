generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Card {
  id         String     @id
  title      String
  note       String
  isFavorite Boolean    @default(false)
  color      String?
  favorite   Favorite[]
  createdAt  DateTime   @default(now())
}

model Favorite {
  id     String  @id
  active Boolean @default(false)
  card   Card    @relation(fields: [cardId], references: [id], onDelete: Cascade)
  cardId String
}
